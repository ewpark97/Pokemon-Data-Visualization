library(shiny)
library(fmsb)

fluidPage(
  titlePanel("Pokemon Match Up"),
  
  sidebarLayout(
    position = "right",
    sidebarPanel(
      textInput("pokemon_1", "Input 1st pokemon: ", 
                value = "Bulbasaur"),
      textInput("pokemon_2", "Input 2nd pokemon: ", 
                value = "Pikachu"),
      h5(uiOutput('matchUp'))
    ),
    mainPanel(
      plotOutput("radarPlot", width = "600", height = "600")
    )
  )
)